{
  "name": "@codespin/permiso",
  "version": "0.0.4",
  "description": "A comprehensive Role-Based Access Control (RBAC) system with GraphQL",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "./scripts/build.sh",
    "clean": "./scripts/clean.sh",
    "start": "./scripts/start.sh",
    "test": "cd node/packages/permiso-integration-tests && npm test && cd ../permiso-client && npm test",
    "migrate:all": "./scripts/db-all.sh migrate:latest",
    "migrate:all:rollback": "./scripts/db-all.sh migrate:rollback",
    "migrate:all:status": "./scripts/db-all.sh migrate:status",
    "migrate:permiso:make": "knex migrate:make --knexfile database/permiso/knexfile.js",
    "migrate:permiso:latest": "knex migrate:latest --knexfile database/permiso/knexfile.js",
    "migrate:permiso:rollback": "knex migrate:rollback --knexfile database/permiso/knexfile.js",
    "migrate:permiso:status": "knex migrate:status --knexfile database/permiso/knexfile.js",
    "db:dump-schema": "./scripts/dump-schema.sh",
    "test:grep": "(cd node/packages/permiso-integration-tests && npm run test:grep) ; (cd node/packages/permiso-client && npm run test:grep)",
    "test:integration:grep": "cd node/packages/permiso-integration-tests && npm run test:grep",
    "test:client:grep": "cd node/packages/permiso-client && npm run test:grep"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^5.2.1",
    "eslint": "^9.32.0",
    "globals": "^15.13.0",
    "knex": "^3.1.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codespin-ai/permiso.git"
  },
  "keywords": [
    "rbac",
    "authorization",
    "permissions",
    "roles",
    "graphql",
    "typescript"
  ],
  "author": "Codespin",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "pg": "^8.16.3"
  }
}
